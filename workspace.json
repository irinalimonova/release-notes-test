---
layout: null
---
{
  {% comment %}
    "show" = true/false контролирует показ записей
  {% endcomment %}
  "show": true,
  "items": [
    {% for post in site.posts %}
      {
        "version": {{ post.title | jsonify }},
        "description": {{ post.content | jsonify }}
      }{% if forloop.last == false %},{% endif %}
    {% endfor %}
  ],
  "pages": [
    {% for p in site.pages %}
      {
        "version": {{ p.title | jsonify }},
        "description": {{ p.content | jsonify }}
      }{% if forloop.last == false %},{% endif %}
    {% endfor %}
  ]
}
